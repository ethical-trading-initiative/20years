{% import "macros/timeline.njk" as timeline %}

{% extends "html.njk" %}

{% block content %}

<div class="viewport">

  {# <div class="page-content"> #}

    {# <div class="overlay-shim"></div> #}

    {# <div class="blob parallax-item"></div> #}

    <header class="page-header parallax-item fast">
      <h1>Ethical Trading Initiative - 20 years</h1>
    </header>

    <div class="timeline">
      {% for entry in entries %}
      {{ timeline.entry(
        type    = entry.type,
        uid     = loop.index0,
        year    = entry.year,
        month   = entry.month,
        title   = entry.title,
        body    = entry.body,
        btn_url = entry.btn_url,
        media   = entry.media
        )
      }}
      {% endfor %}
    </div>

    <div class="blob parallax-item slow"></div>

  {# </div> #}

</div>

{% endblock %}
