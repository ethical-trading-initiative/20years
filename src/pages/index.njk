{% import "macros/timeline.njk" as timeline %}

{% extends "html.njk" %}

{% block content %}

<div class="viewport">

  <header class="page-header parallax-item fast">
    <h1>Ethical Trading Initiative - 20 years</h1>
  </header>

  {# Must be before .timeline or it'll jump around when toggling entry bodies. #}
  {# <div class="overlay-shim parallax-item slow"></div> #}
  {# <div class="debris parallax-item slow"></div> #}

  <div class="timeline">
    {% for entry in entries %}
    {{ timeline.entry(
      uid     = loop.index0,
      year    = entry.year,
      intro   = entry.intro,
      body    = entry.body,
      media   = entry.media
      )
    }}
    {% endfor %}
  </div>

</div>

{% endblock %}
