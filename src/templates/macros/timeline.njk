{% import "macros/gallery.njk" as gallery %}

{% macro entry( uid='', type='text', date='', title='', body='', btn_url='', media={} ) -%}

  <div class="timeline-entry">

    <div class="timeline-entry-icon icon--{{ type | lower }}">
      <img src="images/icon-{{ type | lower }}.svg" alt="{{ type | capitalize }}">
    </div>

    <div class="timeline-entry-content">
      <h2>{{ title }}</h2>
      {{ body | safe }}
      {% if media %}
      <ul class="timeline-entry-gallery">
        {% for item in media %}
        <li class="gallery-item">
          {{ gallery.gallery_item(
            label       = item.label,
            gallery_uid = uid,
            img_id      = item.img_id,
            video_url   = item.video_url
            )
          }}
        </li>
        {% endfor %}
      </ul>
      {% endif %}
      {% if btn_url %}
      <a href="{{ btn_url }}" target="_blank" class="btn read-more">Read more</a>
      {% endif %}
      <span class="entry-date">{{ date }}</span>
    </div>

  </div>

{%- endmacro %}
